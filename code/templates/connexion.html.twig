{% extends 'base.html.twig'%}

{% block title %}
    {{ parent() }} - Se connecter
{% endblock %}

{% block style %}  
    {{ parent() }}
    <link href="style/connexion.css" rel="stylesheet" type="text/css">
{% endblock %}

{% block main %}
        <div class="container">
            <div class="titre">
            Se connecter
            </div>

            {% if error %}
                <div style="color: red"> {{ error.messageKey|trans(error.messageData, 'security')}} </div>
            {% endif %}

            <form method="POST" action="{{ path('app_user_login') }}" class="div-connexion">
                <div class="user_box">
                <input type="email" size="30" name="_username" placeholder="Adresse mail" required>
                </div>

                <div class="user_box">
                <input type="password" size="30" name="_password" placeholder="Mot de passe" required>
                </div>

                <div class="validation_button">
                <input type="submit" value="Se connecter">
                </div>

            </form>

        </div>

{% endblock %}






